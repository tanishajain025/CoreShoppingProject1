@model CoreShoppingAdminPortal.Models.Vendor
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Are you sure you want to delete?</h2>

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">@Html.DisplayNameFor(Model => Model.VendorId)</th>
            <th scope="col">@Html.DisplayNameFor(Model => Model.VendorName)</th>
            <th scope="col">@Html.DisplayNameFor(Model => Model.EmailId)</th>
            <th scope="col">@Html.DisplayNameFor(Model => Model.VendorDescription)</th>
        </tr>
    </thead>
    <tbody>
        <tr>

            <td>
                @Html.DisplayFor(Model => Model.VendorId)
            </td>
            <td>
                @Html.DisplayFor(Model => Model.VendorName)
            </td>
            <td>
                @Html.DisplayFor(Model => Model.EmailId)
            </td>
            <td>
                @Html.DisplayFor(Model => Model.VendorDescription)
            </td>
        </tr>

    </tbody>


</table>
@using (Html.BeginForm("Delete", "Vendor", FormMethod.Post))
{
    <input type="submit" value="Delete" class="btn btn-success" />

    <button class="btn btn-success" asp-controller="Vendor" asp-action="Index">Back</button>

}


