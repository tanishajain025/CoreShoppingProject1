@model CoreShoppingAdminPortal.Models.Vendor
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>Register</h2>
<form asp-action="create" asp-controller="Vendor">
    <div class="form-group row">

        <label for="text" class="col-sm-2 col-form-label" asp-for="VendorName">VendorName</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" placeholder="Text" asp-for="VendorName">
        </div>
        <label for="text" class="col-sm-2 col-form-label" asp-for="EmailId">EmailId</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" placeholder="Email@example.com" asp-for="EmailId">
        </div>

        <label for="text" class="col-sm-2 col-form-label" asp-for="PhoneNo">PhoneNo</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" placeholder="Numeric" asp-for="PhoneNo">
        </div>
        <label for="text" class="col-sm-2 col-form-label" asp-for="VendorDescription">VendorDescription</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" placeholder="Text" asp-for="VendorDescription">
        </div>

    </div>

    <br />
    @using (Html.BeginForm("Create", "Vendor", FormMethod.Post))
    {
        <input type="submit" value="Create" class="btn btn-success" />

        <button class="btn btn-success" asp-controller="Vendor" asp-action="Index">Back</button>

    }

</form>
