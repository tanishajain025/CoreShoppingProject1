@model IEnumerable<CoreShoppingAdminPortal.Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@Html.ActionLink("Register Here", "Create")

<h2>Home Page</h2>
<table class="table">
    <thead>

        <tr>
            <th>@Html.DisplayNameFor(model => model.ProductId)</th>
            <th>@Html.DisplayNameFor(model => model.ProductName)</th>



            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pro in Model)
        {

            <tr>
                <td>@Html.DisplayFor(modelItem => pro.ProductId)</td>
                <td>@Html.DisplayFor(modelItem => pro.ProductName)</td>
                <td>
      <a asp-controller="Product" asp-action="Details" asp-route-id="@pro.ProductId">Details</a>|
       <a asp-controller="Product" asp-action="Edit" asp-route-id="@pro.ProductId">Edit</a>|
       <a asp-controller="Product" asp-action="Delete" asp-route-id="@pro.ProductId">Delete</a>
                </td>


            </tr>
        }
    </tbody>
</table>
